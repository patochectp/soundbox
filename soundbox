#!/bin/sh -

# Provides:          kisio digital
# Required-Start:    $local_fs
# Required-Stop:     $local_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Wireless & LAN Access Point Controller
# Description:       ChilliSpot is an open source captive portal
#                    or wireless LAN access point controller.
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NAME=soundbox
DAEMON="/home/pi/soundbox/soundbox.py"
DAEMON_OPTS=""
USER=root
GROUP=root
PID=/tmp/soundbox.pid

test -x $DAEMON || exit 1

funcstatus(){
    ps p `cat $PID 2>/dev/null` 2>/dev/null | grep -q $DAEMON
    if [ $? -eq 0 ]
    then
        STATUS=0
    else
        STATUS=3
    fi
}

funcstart(){
    funcstatus
    if [ $STATUS -ne 0 ]
    then
        echo "Starting $NAME: "
        start-stop-daemon --start --chdir /tmp --exec $DAEMON -- --uid=$USER --gid=$GROUP --pidfile=$PID  $DAEMON_OPTS
        echo "done."
    else
        echo "$NAME already running"
    fi
}

funcstop(){
    echo "Stopping $NAME: "
    start-stop-daemon --stop --pidfile $PID
    if [ $? -eq 0 ]
    then
        rm $PID
        echo "done."
    else
        echo "failed"
        exit 1
    fi
}


case "$1" in
  start)
        funcstart
        ;;
  stop)
      funcstop
        ;;
  restart)
        funcstop
        funcstart
        ;;
  status)
        funcstatus
        if [ $STATUS -eq 0 ]
        then
            echo $NAME is running
        else
            echo $NAME is NOT running
        fi
        exit $STATUS
        ;;
  *)
        echo "Usage: /etc/init.d/$0 {start|stop|restart|status}" >&2
        exit 1
        ;;
esac

exit 0
